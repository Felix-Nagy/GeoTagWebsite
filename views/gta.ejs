
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>GeoTagApp</title>
	<link rel='stylesheet' href='./stylesheets/style.css'/>
</head>

<body>

<header>
	<img src="./images/location.png" width="100"
		 alt="an image of a map and location">
	<h1>GeoTagApp</h1>
	<nav>
		<a href="#">About</a> | <a href="#">Help</a> | <a
				href="/">Home</a>
	</nav>
</header>

<main class="row">

	<section class="tagging col-4">
		<h2>Tagging</h2>

		<
		<form id="tag-form" action="/tagging" method="post">
			<fieldset>
				<legend>Enter new Geotag</legend>

				<label for="lat-input">latitude
					<input type="text" name="latitude" id="lat-input" placeholder="49.000021" required
							<% if (coords !== undefined) %> value= "<%= coords.latitude %>">
				</label>

				<label for="lon-input">longitude
					<input type="text" name="longitude" id="lon-input" placeholder="8.8567567" required
							<% if (coords !== undefined) %> value= "<%= coords.longitude %>">
				</label>

				<label for="name-input">name
					<input type="text" name="name" id="name-input" placeholder="some name" required
						   maxlength="10">
				</label>

				<label for="hashtag-input">hashtag
					<input type="text" name="hashtag" id="hashtag-input" placeholder="# + 10 max letters"
						   pattern="#(\w|\d){0,10}">
				</label>

				<input type="button" id="submit-btn" value="submit">
			</fieldset>
		</form>

	</section>

	<section class="discovery col-8">
		<h2>Discovery</h2>

		<div class="search">
			
			<form id="filter-form" action="/discovery" method="post">
				<fieldset>
					<legend>Filter by Searchterm</legend>

					<input type="text" name="search" id="search-input" placeholder="search term">

					<input type="hidden" name="latitude" id="lat-hidden"
							<% if (coords !== undefined) %> value= "<%= coords.latitude %>">
					<input type="hidden" name="longitude" id="lon-hidden"
							<% if (coords !== undefined) %> value= "<%= coords.longitude %>">

					<input type="button" id="apply-btn" name="apply" value="Apply">
					<input type="button" id="remove-btn" name="remove" value="Remove">
				</fieldset>
			</form>
			
		</div>

		<div class="tagresult row">
			<div class="taglist col-4">
				<ul id="results">
					<% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
						<li><%= gtag.name %> (<%= gtag.latitude %>, <%= gtag.longitude %>) <%= gtag.hashtag %> </li>
					<% }); %>
				</ul>
			</div>

			<div class="tagmap col-8">
				<div class="row">
					<img id="result-img" class="col-12" src="./images/mapview.jpg" alt="a map with locations"/>
					<div class="caption col-12">Result map</div>
				</div>
			</div>
		</div>

	</section>

</main>

<footer>
<br>
</footer>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
<script src="./javascripts/geotagging.js"></script>
</body>
</html>